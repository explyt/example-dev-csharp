{
  "openapi": "3.0.1",
  "info": {
    "title": "PolicyService",
    "version": "1.0"
  },
  "paths": {
    "/api/Offer": {
      "post": {
        "tags": [
          "Offer"
        ],
        "parameters": [
          {
            "name": "AgentLogin",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOfferCommand"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOfferCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOfferCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOfferCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Policy": {
      "post": {
        "tags": [
          "Policy"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePolicyCommand"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePolicyCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePolicyCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePolicyCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Policy/{policyNumber}": {
      "get": {
        "tags": [
          "Policy"
        ],
        "parameters": [
          {
            "name": "policyNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/terminate": {
      "delete": {
        "tags": [
          "Policy"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/TerminatePolicyCommand"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TerminatePolicyCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TerminatePolicyCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TerminatePolicyCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddressDto": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string",
            "nullable": true
          },
          "zipCode": {
            "type": "string",
            "nullable": true
          },
          "city": {
            "type": "string",
            "nullable": true
          },
          "street": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateOfferCommand": {
        "type": "object",
        "properties": {
          "productCode": {
            "type": "string",
            "nullable": true
          },
          "policyFrom": {
            "type": "string",
            "format": "date-time"
          },
          "policyTo": {
            "type": "string",
            "format": "date-time"
          },
          "selectedCovers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "answers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/QuestionAnswer"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreatePolicyCommand": {
        "type": "object",
        "properties": {
          "offerNumber": {
            "type": "string",
            "nullable": true
          },
          "policyHolder": {
            "$ref": "#/components/schemas/PersonDto"
          },
          "policyHolderAddress": {
            "$ref": "#/components/schemas/AddressDto"
          }
        },
        "additionalProperties": false
      },
      "PersonDto": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "taxId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "QuestionAnswer": {
        "type": "object",
        "properties": {
          "questionCode": {
            "type": "string",
            "nullable": true
          },
          "questionType": {
            "$ref": "#/components/schemas/QuestionType"
          }
        },
        "additionalProperties": false
      },
      "QuestionType": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "TerminatePolicyCommand": {
        "type": "object",
        "properties": {
          "policyNumber": {
            "type": "string",
            "nullable": true
          },
          "terminationDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}