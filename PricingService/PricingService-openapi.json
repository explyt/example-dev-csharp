{
  "openapi": "3.0.1",
  "info": {
    "title": "PricingService",
    "version": "2.0"
  },
  "paths": {
    "/api/Pricing": {
      "post": {
        "tags": [
          "Pricing"
        ],
        "summary": "Legacy pricing calculation endpoint",
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculatePriceResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/Pricing/calculate-price": {
      "post": {
        "tags": [
          "Pricing"
        ],
        "summary": "Version 2 pricing calculation endpoint with enhanced features",
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CalculatePriceCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalculatePriceResultV2"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CalculatePriceCommand": {
        "type": "object",
        "properties": {
          "productCode": {
            "type": "string",
            "nullable": true
          },
          "policyFrom": {
            "type": "string",
            "format": "date-time"
          },
          "policyTo": {
            "type": "string",
            "format": "date-time"
          },
          "selectedCovers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "answers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/QuestionAnswer"
            },
            "nullable": true
          },
          "clientInfo": {
            "$ref": "#/components/schemas/ClientInfo"
          },
          "context": {
            "$ref": "#/components/schemas/RequestContext"
          },
          "includeCalculationDetails": {
            "type": "boolean"
          },
          "currencyCode": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ClientInfo": {
        "type": "object",
        "properties": {
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "region": {
            "type": "string",
            "nullable": true
          },
          "isVip": {
            "type": "boolean"
          },
          "yearsAsCustomer": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "RequestContext": {
        "type": "object",
        "properties": {
          "channel": {
            "type": "string",
            "nullable": true
          },
          "sessionId": {
            "type": "string",
            "nullable": true
          },
          "campaignCode": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "QuestionAnswer": {
        "type": "object",
        "properties": {
          "questionCode": {
            "type": "string",
            "nullable": true
          },
          "questionType": {
            "$ref": "#/components/schemas/QuestionType"
          }
        },
        "additionalProperties": false
      },
      "QuestionType": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "CalculatePriceResult": {
        "type": "object",
        "properties": {
          "totalPrice": {
            "type": "number",
            "format": "double"
          },
          "coverPrices": {
            "type": "object",
            "additionalProperties": {
              "type": "number",
              "format": "double"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CalculatePriceResultV2": {
        "type": "object",
        "properties": {
          "totalPrice": {
            "type": "number",
            "format": "double"
          },
          "coverPrices": {
            "type": "object",
            "additionalProperties": {
              "type": "number",
              "format": "double"
            },
            "nullable": true
          },
          "coverCalculationDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CoverCalculationDetails"
            },
            "nullable": true
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "calculationId": {
            "type": "string",
            "nullable": true
          },
          "calculatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "CoverCalculationDetails": {
        "type": "object",
        "properties": {
          "coverCode": {
            "type": "string",
            "nullable": true
          },
          "coverName": {
            "type": "string",
            "nullable": true
          },
          "basePrice": {
            "type": "number",
            "format": "double"
          },
          "appliedFactors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PriceFactor"
            },
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PriceFactor": {
        "type": "object",
        "properties": {
          "factorName": {
            "type": "string",
            "nullable": true
          },
          "factorValue": {
            "type": "number",
            "format": "double"
          },
          "appliedModifier": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}
